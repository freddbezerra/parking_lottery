<h1 class="text-center">Área Restrita</h1>
<h3 class="text-center">  Faça <b>login</b> para continuar</h3>
<div class="row">
   <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3">
        <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          
            <%= f.email_field :email, autofocus: true,label:"Email" %>
        
            <%= f.password_field :password, autocomplete: "off" ,label: "Senha"%>
        
          <% if devise_mapping.rememberable? -%>
              <%= f.check_box :remember_me , label:"Lembrar-me" %>
          <% end -%>
        
            <%= f.submit "Entrar" ,class: "btn btn-block btn-primary"%>
            <br>
        
        <% end %>
    </div>
</div>
