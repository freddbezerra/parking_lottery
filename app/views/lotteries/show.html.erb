<h1 class="text-center">Informações do Sorteio</h1>

    
<div class="row">
    <div class="col-md-4">
      <div class="text-center">
          <strong><h2>Data do Sorteio:</h2></strong>
          <h1><b><%= @lottery.final_date %></b></h1>
      </div>
    </div>
    
   <div class="col-md-4">
      <div class="text-center">
          <strong><h2>Vagas:</h2></strong>
          <h1><b><%= @lottery.vacancies %></b></h1>
      </div>
    </div>
    
   <div class="col-md-4">
      <div class="text-center">
           <strong><h2>Situação:</h2></strong>
           <%if @lottery.closed %>
              <h1><b>Encerrado</b></h1>
           <%else%>
              <h1><b class="verde">Em aberto</b></h1>
          <%end%>
      </div>
    </div>
</div>

<br/>
<hr class="strong">

<h3 class="text-center">Participantes</h3>
<br>

<table class="table table-condensed">
  <thead>
    <tr>
      <th>E-mail</th>
      <th>Numero da Sorte</th>
    
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @lottery.players.each do |player| %>
      <tr class="<%= player.winner ? "success" : "" %>" >
        <td><%= player.email %></td>
        <td><%= player.lucky_number %></td>
        <% if player.winner %>
          <td><%= icon('trophy', 'Ganhador', id: 'winner-icon', class: 'strong') %></td>
        <% else %>
          <td></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
